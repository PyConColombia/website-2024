# editorconfig.org

root = true

[*]
charset = utf-8
indent_size = 4
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.js]
indent_style = space
indent_size = 2
max_line_length = 80

[*.{yml,yaml,json,css,styl,sass}]
indent_style = space
indent_size = 2

[*.md]
trim_trailing_whitespace = false
